<div class="page-title">
  <h1>Admin Login</h1>
  <p>Please enter your credentials to access the admin area</p>
</div>

<div class="login-form">
  <%= form_with url: admin_login_path, method: :post, local: true do |form| %>
    <% if flash[:alert] %>
      <div class="alert alert-danger"><%= flash[:alert] %></div>
    <% end %>
    
    <div class="form-group">
      <%= form.label :email, "Email Address" %>
      <%= form.email_field :email, class: "form-control", placeholder: "admin@quizapp.com", required: true %>
    </div>
    
    <div class="form-group">
      <%= form.label :password, "Password" %>
      <%= form.password_field :password, class: "form-control", placeholder: "Enter your password", required: true %>
    </div>
    
    <div class="form-group">
      <%= form.submit "Login", class: "btn btn-primary", style: "width: 100%;" %>
    </div>
  <% end %>
  
  <div style="text-align: center; margin-top: 1rem;">
    <%= link_to "â† Back to Home", root_path, class: "nav-link" %>
  </div>
</div>

